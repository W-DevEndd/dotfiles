#!/usr/bin/env bash
shopt -s expand_aliases
source ~/.bashrc
# PIDFILE="~/.local/tmp/xinit/pid"
# rm -rf $PIDFILE
# mkdir -p $(dirname $PIDFILE)
# echo "$$" >> $PIDFILE

tx11 $@ -xstartup "~/.xinitrc" &
PID=$!
am start com.termux.x11/com.termux.x11.MainActivity

trap "kill -2 $PID" SIGINT

wait $PID
